<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="nombre_prod">
    <%= f.label :name, 'Nombre' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="descripcion_prod">
    <%= f.label :description, 'Descripción' %><br>
    <%= f.text_area :description %>
  </div>
  <div class="categoria_prod">
    <%= f.label :category, 'Categoría' %><br>
    <%= f.text_field :category %>
  </div>
  <div class="precio_prod">
    <%= f.label :price, 'Precio' %><br>
    <%= f.number_field :price %>
  </div>
  <div class="stock_inicial_prod">
    <%= f.label :initial_stock, 'Stock Inicial' %><br>
    <%= f.number_field :initial_stock %>
  </div>
  <div class="stock_actual_prod">
    <%= f.label :current_stock, 'Stock Actual' %><br>
    <%= f.number_field :current_stock %>
  </div>

   <div class="imagen_prod">
    <%= f.label :imagen, 'Imagen del producto' %><br>
    <%= f.file_field :imagen %>
  </div>

  <br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
